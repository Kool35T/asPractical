@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.User.FullName</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <table class="table table-borderless">
                <tr>
                    <th colspan="2">Profile</th>
                </tr>
                <tr>
                    <td>Username:</td>
                    <td>@Model.User.FullName</td>
                </tr>
                <tr>
                    <td>Emails:</td>
                    <td>@Model.User.Email</td>
                </tr>
                <tr>
                    <td>Gender:</td>
                    <td>@Model.User.Gender</td>
                </tr>
                <tr>
                    <td>Mobile Number:</td>
                    <td>@Model.User.MobileNo</td>
                </tr>
                <tr>
                    <td>Delivery Address:</td>
                    <td>@Model.User.DeliveryAddress</td>
                </tr>
                <tr>
                    <td>About Me:</td>
                    <td>@Model.User.Aboutme</td>
                </tr>
            </table>
        </div>
        
        <div class="col-md-4">
            <img id="imgPreview" class="img-thumbnail" style="height:300px;width:300px;object-fit:cover"
                 src="@(string.IsNullOrEmpty(Model.User.ImageURL) ? "/uploads/user.png" : Model.User.ImageURL)"
                 onerror="this.src='/uploads/user.png'" />
        </div>
    </div>
</div>
